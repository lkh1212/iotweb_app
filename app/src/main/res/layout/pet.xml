<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PET CARE"
        android:textSize="30sp"
        android:gravity="left"
        android:layout_margin="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CARE YOUR PET"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - " />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설정된 사료 시간"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="20dp"
        android:gravity="start"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
        android:id="@+id/feed_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:text="오전 7시\n오후 1시"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사료 시간 설정"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/feedtime_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_settings"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:backgroundTint="#FFFFFF"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 물 높이"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
        android:id="@+id/waterlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0cm"
        android:textAlignment="center"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/pet_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사료주기"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/pet_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="물주기"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp" />

    </LinearLayout>


</LinearLayout>
